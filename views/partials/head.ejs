    <style>
        *{
            box-sizing: border-box;
            margin: 0;
        }

        body{
            /* font-family: 'Cormorant', serif; */
            /* background-color: #faf2f2; */
            /* background-image: linear-gradient(120deg, #fdfbfb 0%, #ebedee 100%); */
            background-image: linear-gradient(to top, #d5d4d0 0%, #d5d4d0 1%, #eeeeec 31%, #efeeec 75%, #e9e9e7 100%);
            font-family: 'Muli', serif;   
        }

        nav li a{
            text-decoration: none;
        }
        nav li {
            list-style: none;
        }
        nav{
            width: 100%;
            height: 65px;
            position: fixed;
            background-color: #eeeeec;
            z-index: 4;
        }
        
        label.logo{
            font-size: 35px;
            line-height: 80px;
            padding: 0 100px;
            font-weight: bold;
            display: none;
        }

        nav ul {
            float: right;
            margin-right: 40px;
        }

        nav ul li{
            display: inline-block;
            line-height: 80px;
            margin: 0 25px;
        }

        nav ul li a{
            color: black;
            font-size: 15px;
            font-weight: bold;
        
        }

        a:hover{
            color: rgba(0, 0, 0, 0.411);
            transition: .5s;
        }

        .checkbtn{
            font-size: 30px;
            color:  #494946;;
            float: right;
            line-height: 80px;
            margin-right: 40px;
            cursor: pointer;
            display: none;
        }

        #check{
            display: none;
        }

       
        
        @media (max-width: 800px){
            .checkbtn{
                display: block;
                padding-top: 20px;
            }
            ul{
                position: fixed;
                width: 100%;
                height: 100vh;
                background: white;
                top: 65px;
                left: -100%;
                text-align: center;
                transition: all .5s;
            }
            nav ul li{
                display: block;
                margin: 50px 0;
                line-height:30px;
            }
            nav ul li a{
                font-size: 20px;
            }
            a:hover{
                color: rgb(187, 187, 187);
            }
            #check:checked ~ ul{
                left: 0;
            }

        }
        .home-photo-large{
            width: 100%;
            height: 70vh;
            background-image: url(/images/home/about-photo.png);
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .home-photo-large h2{
            font-size: 1.5em;
            font-weight: 100;
            color: white;
        }

        .slogan{
            width: 100%;
            height: 70vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .slogan > h3{
            font-size: 1.5em;
            text-transform: uppercase;
            margin-bottom: 10px;
            color: #494946;
        }

        .slogan h3:nth-child(2){
            font-weight: 100;
        }

        /* Image links to pages  */
        .container{
            width: 100%;
            padding-left: 25px;
            padding-right: 25px;

        }

        .grid{
            display: grid;
            justify-content: center;
            grid-template-columns: repeat(2, minmax(250px, 400px));
            grid-template-rows: repeat(2, auto);
            grid-gap: 0px 250px;
        }
        @media (max-width: 700px){
            .grid{
                grid-template-columns: repeat(1, minmax(200px, 350px));
                grid-template-rows: repeat(4, auto);
    
            }
            .grid h2{
                padding-top: 0;
                padding-bottom: 25px;
            }
            .box-4{
                grid-row: 2;
            }
            .box-1 img{
                width: 100%;
            }
            .box-2 img{
                width: 100%;
            }
            
        }

        .grid-2{
            display: grid;
            justify-content: center;
            grid-template-columns: repeat(1, 600px);
            grid-template-rows: 700px;   
            padding-bottom: 80px;             
        }

        @media (max-width: 800px){
            .grid-2{
                grid-template-columns: 450px;
                grid-template-rows: 600px;
            }
            
        }
        .box-1{
            max-width: 100%;
        }

        .box-1 img{
            max-width: 100%;
        }

        .box-2{
            max-width: 100%;
        }

        .box-2 img{
            max-width: 100%;
        }

        .grid h2{
            padding-top: 15px;
            text-transform: uppercase;
            font-weight: 500;
            color: #494946;
        }

        .grid h2 span{
            font-family: 'Cormorant', serif;
            font-size: 1.1em;
            font-weight: lighter;
            font-style: italic;
        }

        /* home page bespoke image + text */

