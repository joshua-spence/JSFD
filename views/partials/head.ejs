            grid-template-columns: 25% 25% 25% 25%;
            grid-template-rows: 80px 100px;
            grid-gap: 60px 0px;
            grid-template-areas: 
            "header header . ."
            ". para para . ";
            top: 30%;   
        }
        .header-1{
            grid-area: header;
        }
        .para-1{
